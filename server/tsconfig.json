{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "forceConsistentCasingInFileNames": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node", "express"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
